{
	"info": {
		"_postman_id": "review-monster-api",
		"name": "ReviewMonster API",
		"description": "Product Intelligence Platform - App Store Review Analysis API\n\n## Cache Behavior\nAll LLM calls read from cache by default. Pass `bypassCache: true` (POST body) or `?bypassCache=true` (GET query param) to force fresh LLM calls.\n\n## LLM Providers\nSupports multiple LLM providers: OpenAI, Anthropic (Claude), Google (Gemini). Set `LLM_PROVIDER` env var to switch.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "appId",
			"value": "1081530898",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "System",
			"item": [
				{
					"name": "Get LLM Provider Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/llm/info",
							"host": ["{{baseUrl}}"],
							"path": ["llm", "info"]
						},
						"description": "Get information about the current LLM provider and all available providers. Shows which provider is default, which are configured (have API keys), and available models."
					},
					"response": []
				}
			],
			"description": "System information and configuration endpoints"
		},
		{
			"name": "Onboarding",
			"item": [
				{
					"name": "Fetch App Metadata",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"appId\": \"{{appId}}\",\n    \"country\": \"us\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/apps/metadata",
							"host": ["{{baseUrl}}"],
							"path": ["apps", "metadata"]
						},
						"description": "Fetch app metadata from App Store using iTunes API. Returns app name, icon, rating, description, etc."
					},
					"response": []
				},
				{
					"name": "Initialize Reviews (Async)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": true,\n    \"async\": true,\n    \"bypassCache\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/init",
							"host": ["{{baseUrl}}"],
							"path": ["init"]
						},
						"description": "Download and analyze reviews from App Store. Runs asynchronously by default.\n\n- `refresh`: true to fetch new reviews from App Store\n- `async`: true for background processing (recommended)\n- `bypassCache`: true to force re-analysis even if cached\n\nPoll /init/status for progress."
					},
					"response": []
				},
				{
					"name": "Initialize Reviews (Sync)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": false,\n    \"async\": false,\n    \"bypassCache\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/init",
							"host": ["{{baseUrl}}"],
							"path": ["init"]
						},
						"description": "Synchronous init - waits for completion. Only use with async=false and refresh=false (cached data only). May timeout with refresh=true.\n\n- `bypassCache`: true to force re-analysis even if cached"
					},
					"response": []
				},
				{
					"name": "Initialize Reviews (Bypass Cache)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": false,\n    \"async\": true,\n    \"bypassCache\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/init",
							"host": ["{{baseUrl}}"],
							"path": ["init"]
						},
						"description": "Force re-analysis of all reviews by bypassing cache. Use when you need fresh LLM analysis."
					},
					"response": []
				},
				{
					"name": "Get Init Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/init/status",
							"host": ["{{baseUrl}}"],
							"path": ["init", "status"]
						},
						"description": "Check the status of async initialization. Returns progress, percentage, and result when complete."
					},
					"response": []
				}
			],
			"description": "Endpoints for app setup and review initialization"
		},
